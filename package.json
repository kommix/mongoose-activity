{
  "name": "@kommix/mongoose-activity",
  "version": "1.0.0",
  "description": "A modern, lightweight, and fast Mongoose plugin for automatically logging user activity into a central Activity collection",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -p tsconfig.esm.json",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "prepublishOnly": "npm run clean && npm run lint && npm run format:check && npm run test && npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mongoose",
    "activity",
    "activity-feed",
    "timeline",
    "audit",
    "log",
    "kommix",
    "modern",
    "lightweight",
    "fast",
    "plugin",
    "typescript"
  ],
  "author": "Kommix",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kommix/mongoose-activity.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "mongoose": "^7.0.0 || ^8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^9.1.0",
    "mongoose": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}